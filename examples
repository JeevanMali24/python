#find the length of the words
a = "this my new ptython project"
length = (len(a))
print ("the length is:", length)

#uppercase/lowercase
text = "Python is easy language"

upper = text.upper()
lower = text.lower()
print ("uppercase :", upper)
print ("lowercase:", lower)

#replace word
replace = (text.replace("easy","simple"))
print (replace)

#split the string
word = text.split()
print (word)
